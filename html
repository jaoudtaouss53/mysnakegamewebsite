    <title>Snake Game</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap');

        body {
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #0f4c3a 0%, #2d5a27 50%, #1a4a2e 100%);
            font-family: 'Orbitron', monospace;
            flex-direction: column;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 25% 25%, rgba(46, 125, 50, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(102, 187, 106, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .game-container {
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 40px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(76, 175, 80, 0.3);
            position: relative;
        }

        .game-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #4CAF50, #2E7D32, #4CAF50);
            border-radius: 25px;
            z-index: -1;
            animation: borderGlow 3s ease-in-out infinite alternate;
        }

        @keyframes borderGlow {
            from { opacity: 0.5; }
            to { opacity: 1; }
        }

        h1 {
            color: #4CAF50;
            text-align: center;
            margin-bottom: 25px;
            font-size: 3rem;
            font-weight: 900;
            text-shadow: 
                0 0 10px rgba(76, 175, 80, 0.5),
                0 0 20px rgba(76, 175, 80, 0.3),
                2px 2px 4px rgba(0, 0, 0, 0.5);
            letter-spacing: 3px;
        }

        .score-board {
            background: linear-gradient(45deg, rgba(76, 175, 80, 0.2), rgba(46, 125, 50, 0.2));
            color: #E8F5E8;
            text-align: center;
            margin-bottom: 25px;
            font-size: 1.4rem;
            font-weight: 700;
            padding: 15px 25px;
            border-radius: 15px;
            border: 1px solid rgba(76, 175, 80, 0.3);
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        }

        #gameCanvas {
            border: 4px solid rgba(76, 175, 80, 0.4);
            border-radius: 15px;
            background: 
                radial-gradient(circle at center, #1a4a2e 0%, #0d2818 100%);
            box-shadow: 
                inset 0 0 30px rgba(0, 0, 0, 0.5),
                0 8px 25px rgba(0, 0, 0, 0.3);
            position: relative;
        }

        #gameCanvas::before {
            content: '';
            position: absolute;
            top: -4px;
            left: -4px;
            right: -4px;
            bottom: -4px;
            background: linear-gradient(45deg, transparent, rgba(76, 175, 80, 0.2), transparent);
            border-radius: 15px;
            z-index: -1;
        }

        .controls {
            color: #B8E6B8;
            text-align: center;
            margin-top: 25px;
